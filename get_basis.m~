function basis = get_basis(X,type)
% type r->row, c->column, n->null
if type=='n'
    Y=row_reduced_echleon_form(X);
    [r,c]=size(X);
    Z=eye(c);
    free=[];
    for i=1:r
        if any(Y(i,:))=0
            for j=1:c
                if Y(i,j)~=0
                    free=[free j];
                end
            end
        else
            break;
        end
    end
    Z(:,free)=[];
    Y(:,free)=[];
    Z
    Y
    Z(free,:)=-Y;
    basis=Z;
    return;
elseif type=='r'
    X=X';
end
[r,c]=size(X);
Y=row_reduced_echleon_form(X);
j=1;
basis=[];%basis set
k=1;
for i=1:r
    while Y(i,j)==0
        j=j+1;
        if(j>c)
            break;
        end
    end
    if (j<=c)
        basis(:,k)=X(:,j);
        k=k+1;
        j=j+1;
    end
    if j>=c
        if type=='r'
            basis=basis';
        end
        return;
    end
end